# HCMUT LMS Crawler Configuration
# Copy this file to .env and configure your settings

# Base URL of the LMS system
BASE_URL=https://lms.hcmut.edu.vn

# Authentication cookie (get from browser developer tools after logging in)
# Example: MoodleSession=abcd1234xyz...
COOKIE=

# Number of concurrent workers (1-10 recommended)
NUMBER_OF_WORKERS=1

# Output directory for saved HTML files
OUTPUT_DIR=./

# User ID range for brute force crawling (set MAX_USER_ID > 0 to enable)
MIN_USER_ID=0
MAX_USER_ID=0

# Batch size for crawling (data is saved after each batch)
BATCH_SIZE=1000

